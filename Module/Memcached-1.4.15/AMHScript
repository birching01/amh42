#!/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin;

#info
function amh_module_info()
{
		echo 'AMH-ModuleName: Memcached-1.4.15';
		echo 'AMH-ModuleDescription: （需要先安装memcache）Memcached是一套分布式的快取系统，当初是Danga Interactive为了LiveJournal所发展的，目前被许多软件（如MediaWiki）所使用。默认管理用户密码为admin admin。';
		echo 'AMH-ModuleButton: 安装/卸载';
		echo 'AMH-ModuleDate: 2014-12-19';
		echo 'AMH-ModuleAdmin: /memadmin';
		echo 'AMH-ModuleWebSite: http://git.oschina.net/renhao/renhao';
		echo 'AMH-ModuleIco: http://amysql.com/View/images/amh_module/Memcached.gif';
		echo 'AMH-MoudleScriptBy: jack';
}

#install
function amh_module_install()
{
	if amh_module_status ; then
		exit;
	else
		##编译安装libevent支持
		cd /usr/local/;
		wget -c http://git.oschina.net/renhao/renhao/raw/master/amh-4.2/Module/file/libevent-2.1.4-alpha.tar.gz;
		tar zxvf libevent-2.1.4-alpha.tar.gz;
		cd libevent-2.1.4-alpha/;
		./configure --prefix=/usr/local/libevent;
		make && make install;
		echo "/usr/local/libevent/lib/" >> /etc/ld.so.conf;
		ln -s /usr/local/libevent/lib/libevent-2.1.so.5  /lib/libevent-2.1.so.5;
		ldconfig;

		##编译安装memecached
		cd /usr/local/;
		wget http://www.memcached.org/files/memcached-1.4.21.tar.gz;
		tar -zxvf memcached-1.4.21.tar.gz;
		cd memcached-1.4.21;
		./configure --prefix=/usr/local/memcached --with-libevent=/usr/local/libevent;
		make && make install;
		ln /usr/local/memcached/bin/memcached /usr/bin/memcached;

		cd /root/amh/modules/Memcached-1.4.15;
		cp -a ./memadmin /home/wwwroot/index/web/;
		cp ./memcached-init /etc/init.d/memcached;
		chmod +x /etc/init.d/memcached;
		useradd -s /sbin/nologin nobody;
		egrep -i "centos" /etc/issue && chkconfig --level 345 memcached on || update-rc.d -f memcached defaults;
		/etc/init.d/memcached start;
		amh_module_status;
	fi;
}

#admin 
function amh_module_admin()
{
	if amh_module_status ; then
		echo '[OK] Memcachedd-1.4.21 Management: http://ip:8888/memcached.php ';
	else
		exit;
	fi;
}

#uninstall
function amh_module_uninstall()
{
	if amh_module_status ; then
		cd /usr/local/;
		rm -rf libevent-2.1.4-alpha.tar.gz;
		rm -rf libevent-2.1.4-alpha;
		rm -rf /usr/local/libevent;
		rm -rf /lib/libevent-2.1.so.5;
		sed -i "/libevent/d" /etc/ld.so.conf;

		/etc/init.d/memcached stop;
		rm -rf memcached-1.4.21.tar.gz;
		rm -rf memcached-1.4.21;
		rm -rf /usr/local/memcached;
		rm -f /usr/bin/memcached /etc/init.d/memcached;
		egrep -i "centos" /etc/issue && chkconfig memcached off || update-rc.d -f memcached remove;
		rm -rf /home/wwwroot/index/web/memadmin;
		echo '[OK] memcached-1.4.21 Uninstall successful.';
	else
		exit;
	fi;
}

#status
function amh_module_status()
{
	if [ -f "/home/wwwroot/index/web/memadmin/index.php" ]; then
		echo '[OK] memcached-1.4.21 is already installed.';
		return 0;
	else
		echo '[Notice] memcached-1.4.21 is not installed.';
		return 1;
	fi;
}
